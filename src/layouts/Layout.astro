---
import ToastProvider from "../components/ToastProvider.astro";

export interface Props {
  title: string;
  description?: string;
  showNavbar?: boolean;
}

const { title, description = "My interactive digital diary and memory timeline", showNavbar = false } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <slot />
    <ToastProvider />
  </body>
  <style is:global>
    @import "../styles/global.css";
  </style>
</html>